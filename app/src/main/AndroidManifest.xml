<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JeongsanApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jeongsan"
        tools:targetApi="31">
        <activity
            android:name=".ui.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.sendcomplete.SendCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.creategroup.CreateGroupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.inviteinfo.InviteInfoActivity"
            android:exported="false"
            android:theme="@style/invite_info_theme" />
        <activity
            android:name=".ui.sendmessage.SendMessageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.expenselist.ExpenseListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false">
        </activity>
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".ui.addexpense.AddExpenseActivity"
            android:exported="true" />
        <activity
            android:name=".ui.expensedetail.ExpenseDetailActivity"
            android:exported="true" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
