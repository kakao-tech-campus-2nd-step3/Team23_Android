<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/invite_info_padding"
    tools:context=".ui.inviteinfo.InviteInfoActivity">
    <TextView
        android:id="@+id/page_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/close_imageview"
        android:text="@string/invite_info_title"
        android:textSize="@dimen/all_header_text_size"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/close_imageview"
        android:layout_width="@dimen/invite_info_close_width"
        android:layout_height="@dimen/invite_info_close_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/all_close"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/member_content_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/item_member_info"
        />
</androidx.constraintlayout.widget.ConstraintLayout>